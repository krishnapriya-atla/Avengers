<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff5722"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/etPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name(Min.3 characters)"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_person"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/etEmailAddressReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Adress"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_email"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/etPersonName"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/etMbReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile Number(10 digits)"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_smartphone_black_24dp"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/etEmailAddressReg"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:inputType="phone"
        android:maxLength="10"
        android:maxLines="1"
        />

    <EditText
        android:id="@+id/etAddressReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Delivery Address"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_location"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/etMbReg"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/etPasswordReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password(Min.4 characters)"
        android:background="#ffffff"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_lock"
        android:layout_marginTop="10dp"
        android:layout_below="@id/etAddressReg"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:inputType="textPassword"
        android:maxLines="1"
        />
    <EditText
        android:id="@+id/etConfirmPasswordReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:background="#ffffff"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_lock"
        android:layout_marginTop="10dp"
        android:layout_below="@id/etPasswordReg"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:inputType="textPassword"
        android:maxLines="1"
        />
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dd2c00"
        android:text="Register"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@id/etConfirmPasswordReg"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>